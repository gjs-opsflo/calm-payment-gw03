{
  "calmSchemaVersion": "1.0",
  "name": "API Gateway Customer Service Architecture",
  "nodes": [
    {
      "name": "customer-service",
      "type": "microservice",
      "metadata": {
        "description": "Customer-facing microservice handling customer data and interactions"
      }
